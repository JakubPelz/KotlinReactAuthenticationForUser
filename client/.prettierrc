{
    "plugins": [
        "prettier-plugin-organize-imports",
        "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
        "^components/(.*)$",
        "^hooks/(.*)$",
        "^services/(.*)$",
        "^enums/(.*)$",
        "^data/(.*)$",
        "^utils/(.*)$",
        "^styles/(.*)$",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "endOfLine": "auto",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "none",
    "printWidth": 120,
    "arrowParens": "avoid"
}